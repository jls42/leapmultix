{
  "name": "leapmultix",
  "version": "1.0.0",
  "type": "module",
  "description": "Application web Ã©ducative interactive pour apprendre les tables de multiplication",
  "main": "index.html",
  "scripts": {
    "build": "npm run assets:generate && rollup -c && node scripts/postbuild.cjs",
    "test": "jest --maxWorkers=50%",
    "test:core": "jest --maxWorkers=50% tests/__tests__/core/",
    "test:core:inband": "jest --runInBand tests/__tests__/core/",
    "test:storage": "jest --maxWorkers=50% tests/__tests__/storage.test.js",
    "test:watch": "jest --watch --maxWorkers=50%",
    "test:coverage": "jest --coverage --maxWorkers=50%",
    "test:integration": "jest --maxWorkers=50% tests/__tests__/integration",
    "test:verbose": "jest --verbose --maxWorkers=50%",
    "lint": "eslint js/**/*.js",
    "serve": "serve-lite .",
    "serve:dist": "serve -s dist -l 5000",
    "analyze:dependencies": "node scripts/analyze-dependencies.js",
    "dead-code": "node scripts/improved-dead-code-check.js",
    "analyze:globals": "node scripts/analyze-globals.js",
    "sw:disable": "node scripts/disable-sw.js",
    "sw:fix": "node scripts/fix-sw.js",
    "assets:diff": "node scripts/assets-diff.cjs",
    "i18n:verify": "node scripts/i18n-verify.cjs",
    "i18n:unused": "node scripts/i18n-generate-unused.cjs",
    "audit:accessibility": "node scripts/audit-accessibility.js",
    "audit:mobile": "node scripts/audit-mobile-responsive.js",
    "test:pwa-offline": "node scripts/test-pwa-offline.cjs",
    "analyze:jsdoc": "node scripts/analyze-jsdoc.cjs",
    "improve:jsdoc": "node scripts/improve-jsdoc.cjs",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "lint:fix": "eslint --fix \"js/**/*.js\"",
    "verify": "npm run lint && npm test && npm run test:coverage",
    "verify:cleanup": "npm run dead-code && npm run analyze:globals",
    "test:esm": "NODE_OPTIONS=--experimental-vm-modules jest --maxWorkers=50% tests-esm --testMatch \"**/*.test.mjs\"",
    "assets:generate": "node scripts/generate-responsive-assets.cjs",
    "assets:analyze": "node scripts/analyze-responsive-usage.cjs"
  },
  "keywords": [
    "education",
    "multiplication",
    "kids",
    "games",
    "math",
    "javascript",
    "es-modules",
    "accessibility",
    "i18n",
    "progressive-web-app"
  ],
  "author": "Julien LE SAUX <contact@jls42.org>",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jls42/leapmultix.git"
  },
  "bugs": {
    "url": "https://github.com/jls42/leapmultix/issues"
  },
  "homepage": "https://leapmultix.jls42.org",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@eslint/js": "^9.35.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@stylistic/stylelint-plugin": "^2.1.3",
    "eslint": "^9.35.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "puppeteer": "^24.20.0",
    "rollup": "^4.41.1",
    "serve": "^14.2.4",
    "serve-lite": "^1.3.0",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^36.0.1"
  }
}
